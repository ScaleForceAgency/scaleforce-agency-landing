    id="calendly"
  /> -->

  <!-- Steps2 Widget ****************** -->

  <Steps2
    id="contact"
    title="Reach out to us"
    subtitle="Have questions? Feel free to contact us using any of these methods.  Our agency swarm is here to help, 24/7/365!"
    callToAction={{
      text: 'Contact us',
      // TODO; create contact form
      href: '/',
    }}
    items={[
      {
        title: 'Call us',
        // TODO: turn this into a phone link
        description: '+1 (970) 315-2345',
        icon: 'tabler:headset',
      },
      {
        title: 'Chat with us',
        // TODO: turn this into a chatbot link
        description: 'Live Chat ->',
        icon: 'tabler:keyboard',
      },
      {
        title: 'Book a 30 minute video call',
        // TODO: turn this into a link to calendly
        description: 'Meeting Calendar ->',
        icon: 'tabler:brand-zoom',
      },
      {
        title: 'Email us',
        // TODO: turn this into a mail-to link
        description: 'info@ScaleForce.agency.com',
        icon: 'tabler:mail',
      },
    ]}
  />

  <!-- Use Cases Blog Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Explore use cases on the Scale Force blog"
    information={`Explore our collection of articles, guides, and use case studies on automations, integrationss, and using AI effectively for your business.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
